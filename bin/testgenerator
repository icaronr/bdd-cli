#!/usr/bin/env ruby
require_relative 'commands'
include Behaviorism

puts "NÃºmero de argumentos: #{ARGV.length}"

if ARGV.include? '--help' or ARGV.length < 1 then
    # puts "\e[H\e[2J" #clears the terminal
    puts "Welcome to TestGenerator!"
    puts "You can use the following commands:"
    puts
    puts "#{"run".ljust(20)} Run cucumber and generate the logfiles."
    puts "#{"clean".ljust(20)} Clean the files generated by the gem."
    puts "#{"generate".ljust(20)} Run the generator, you must specify which one."
    puts "#{"install".ljust(20)} Install the dependencies needed."
    puts
    puts
    puts "Thank you for using TestGenerator!"
    return
end

def parse_commands command
    case command
    when "run"
        run
    when "clean"
        clean
    when "generate"
        generate
    when "install"
    install
    end
end

ARGV.each do |command|
    parse_commands command
end


